// === toolbar default base with scrolling arrows etc.
group { name: "elm/toolbar/base/default";
   IMAGE_SET("arrow-left", 14, 14)
   IMAGE_SET("arrow-right", 14, 14)
   IMAGE_SET("arrow-down", 14, 14)
   IMAGE_SET("arrow-up", 14, 14)
#define PRESSED 1
#define HOVER   2
   script {
      public arrow_l_state;
      public eval_arrow_l(m) {
         new p = m & PRESSED;
         new h = m & HOVER;
         if (!p) {
            if (!h) {
               set_state(PART:"arrow_l", "default", 0.0);
            }
            else {
               set_state(PART:"arrow_l", "hover", 0.0);
            }
           }
         else {
              set_state(PART:"arrow_l", "clicked", 0.0);
         }
      }
      public arrow_r_state;
      public eval_arrow_r(m) {
         new p = m & PRESSED;
         new h = m & HOVER;
         if (!p) {
            if (!h) {
               set_state(PART:"arrow_r", "default", 0.0);
            }
            else {
               set_state(PART:"arrow_r", "hover", 0.0);
            }
           }
         else {
              set_state(PART:"arrow_r", "clicked", 0.0);
         }
      }
      public arrow_u_state;
      public eval_arrow_u(m) {
         new p = m & PRESSED;
         new h = m & HOVER;
         if (!p) {
            if (!h) {
               set_state(PART:"arrow_u", "default", 0.0);
            }
            else {
               set_state(PART:"arrow_u", "hover", 0.0);
            }
           }
         else {
              set_state(PART:"arrow_u", "clicked", 0.0);
         }
      }
      public arrow_d_state;
      public eval_arrow_d(m) {
         new p = m & PRESSED;
         new h = m & HOVER;
         if (!p) {
            if (!h) {
               set_state(PART:"arrow_d", "default", 0.0);
            }
            else {
               set_state(PART:"arrow_d", "hover", 0.0);
            }
           }
         else {
              set_state(PART:"arrow_d", "clicked", 0.0);
         }
      }
   }
   parts {
      part { name: "base"; type: RECT;
         description { state: "default" 0.0;
            // rel1.offset: 2 2;
            rel2.offset: -1 -1;
            color_class: "dialog_base";
         }
      }
      part { name: "clipper"; type: RECT;
         description { state: "default" 0.0;
            // rel1.to_x: "arrow_l_ev";
            // rel1.to_y: "arrow_u_ev";
            // rel2.to_x: "arrow_r_ev";
            // rel2.to_y: "arrow_d_ev";
            // rel1.relative: 1.0 1.0;
            // rel2.relative: 0.0 0.0;
            rel1.to: "base";
            rel2.to: "base";
         }
      }
      part { name: "elm.swallow.content"; type: SWALLOW;
         clip_to: "clipper";
         description { state: "default" 0.0;
            // rel.to: "clipper";
            rel1.offset: 0 0;
            rel2.offset: -1 -1;
         }
      }
      part { name: "arrow_clipper_l"; type: RECT;
         description { state: "default" 0.0;
            visible: 0;
         }
         description { state: "visible" 0.0;
            inherit: "default" 0.0;
            visible: 1;
         }
      }
      part { name: "arrow_l"; mouse_events: 0;
         scale: 1;
         clip_to: "arrow_clipper_l";
         description { state: "default" 0.0;
            rel1.to: "arrow_l_ev";
            rel2.to: "arrow_l_ev";
            image.normal: "arrow-left";
            color_class: "list_item_arrow";
            FIXED_SIZE(14, 14)
         }
         description { state: "clicked" 0.0;
            inherit: "default" 0.0;
            color_class: "list_item_arrow_selected";
         }
         description { state: "hover" 0.0;
            inherit: "default" 0.0;
            color_class: "list_item_arrow_hover";
         }
      }
      part { name: "arrow_l_ev"; type: RECT;
         scale: 1;
         clip_to: "arrow_clipper_l";
         description { state: "default" 0.0;
            rel1.to: "base";
            rel2.to: "base";
            align: 0.0 0.5;
            color: 0 0 0 0;
            FIXED_SIZE(23, 23)
         }
         description { state: "visible";
            inherit: "default";
            FIXED_SIZE(23, 23)
         }
      }

      part { name: "arrow_clipper_r"; type: RECT;
