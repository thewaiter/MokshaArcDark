         }
         description { state: "hover" 0.0;
            inherit: "default" 0.0;
            color_class: "list_item_arrow_hover";
         }
      }
      part { name: "arrow_d_ev"; type: RECT;
         scale: 1;
         clip_to: "arrow_clipper_d";
         description { state: "default" 0.0;
            rel1.to: "base";
            rel2.to: "base";
            align: 0.5 1.0;
            color: 0 0 0 0;
            FIXED_SIZE(23, 23)
         }
         description { state: "visible";
            inherit: "default";
            FIXED_SIZE(23, 23)
         }
      }
   }
